		style(type="text/css").
			:root {
				/* Цветовая гамма проекта */
				--main-color: #6e35f5;
			}
			body {
				margin: 0;
			}
			.bg {
				position: absolute;
				left: 0;
				right: 0;
				width: 100%;
				height: 100%;
				overflow: hidden;
				z-index: -1;
			}
			.bg::after {
				content: '';
				position: fixed;
				top: 0;
				right: 0;
				width: 50%;
				height: 50%;
				transform: translateX(40%) translateY(-40%);
				background: linear-gradient(209.1deg, #cfc5a0 24.34%, #cfc5a0 73%, #cfc5a0 93.04%);
				filter: blur(250px);
			}
			.content {
				max-width: 1280px;
				width: 100%;
				margin-left: auto;
				margin-right: auto;
				padding: 60px 20px;
				box-sizing: border-box;
				font-family: Verdana, Geneva, sans-serif;
				color: #141414;
			}

			.logo {
				width: 200px;
				height: 200px;
				margin-bottom: 90px;
			}
			.logo img{
				width: 100%
			}
			.block {
				margin-bottom: 40px;
			}
			.block + .block {
				border-top: 1px solid #D7D7D7;
				padding-top: 40px;
			}

			.block__title {
				margin-bottom: 20px;
				font-size: 17px;
				line-height: 20px;
				font-weight: 600;
				text-transform: uppercase;
			}
			.block__list {
				list-style: none;
				padding: 0;
				font-weight: 400;
				font-size: 16px;
				line-height: 20px;
			}
			.block__list li {
				display: flex;
				align-items: center;
			}
			.block__list li::before {
				content: '';
				width: 10px;
				height: 10px;
				background: #c3c3c3;
				border-radius: 3px;
				margin-right: 12px;
			}
			.block__list li.done::before {
				background: var(--main-color);
			}

			.block__list a {
				text-decoration: none;
				color: #141414;
			}
			.block__list li:not(:last-child) {
				margin-bottom: 12px;
			}

