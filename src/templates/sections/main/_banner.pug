					.main-banner__slide
						.main-banner__el
							.main-banner__bg
								picture
									source(media="(min-width: 768px)", srcset="img/main-slider/banner-2.jpg")
									source(media="(max-width: 767px)", srcset="img/main-slider/banner-2_mob.jpg")
									img(src="img/main-slider/banner-2.jpg" alt="" loading="lazy")
							.main-banner__container

